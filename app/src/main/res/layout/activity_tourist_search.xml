<!-- res/layout/activity_tourist_search.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 지역 입력 필드 -->
    <EditText
        android:id="@+id/region_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="지역"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <!-- 시군구 입력 필드 -->
    <EditText
        android:id="@+id/sigungu_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="시/군/구"
        android:inputType="text"
        android:layout_below="@id/region_input"
        android:layout_marginBottom="8dp" />

    <!-- 관광지 타입 입력 필드 -->
    <EditText
        android:id="@+id/content_type_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="관광지 타입 ID (예: 12)"
        android:inputType="number"
        android:layout_below="@id/sigungu_input"
        android:layout_marginBottom="8dp" />

    <!-- 검색 버튼 -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:layout_below="@id/content_type_id_input"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tourist_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_button"
        android:layout_marginTop="8dp" />

</RelativeLayout>
